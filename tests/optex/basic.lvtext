\load[lua-widow-control]

% Emulate standard LaTeX settings for ease of testing
\margins/1 letter (,,,,)pt
\hsize=345pt
\hoffset=134pt
\vsize=550pt
\voffset=128pt

\fontfam[LMfonts]

\def\pagebreakcommand{\vfil\break}
\def\texcsname#1{{\tt\char`\\#1}}
\def\emph#1{{\it#1}}
\enquotes
\def\quotation#1{\"#1"}
\def\printlocation#1{\write16{===#1:\the\count0===}}

\input basic

\bye
